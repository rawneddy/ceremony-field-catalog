{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "mongodb": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mongodb-js/mongodb-mcp-server",
        "--connectionString",
        "mongodb://localhost:27017/ceremony_catalog"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    }
  }
}